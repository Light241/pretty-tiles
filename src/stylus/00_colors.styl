@import 'nib'
//Colors from http://flatuicolors.com/

turquoise_color = #1abc9c
sun_flower_color = #f1c40f
orange_color = #f39c12
nephritis_color = #27ae60
carrot_color = #e67e22
pumpkin_color = #d35400
peter_river_color = #3498db
belize_hole_color = #2980b9
alizarin_color = #e74c3c
wisteria_color = #8e44ad

//some basic colors
white_color = #FFF
black_color = #000

//steps for hovers
color_ratio = 5

tile_buttons(c)
  .t_btn
    background-color darken(c, color_ratio)
    &.t_dialog_btn
      &:nth-child(even)
        background-color darken(c, color_ratio + 1)
        &[disabled]
          color lighten(c, color_ratio + 2)
          &:hover, &:active
            color lighten(c, color_ratio + 2)
            background-color darken(c, color_ratio + 1)
      &:nth-child(odd)
        &:hover
          background-color lighten(c, color_ratio + 2)
        &[disabled]
          color darken(c, color_ratio + 2)
          &:hover, &:active
            background-color lighten(c, color_ratio + 2)
    &[disabled]
      color lighten(c, color_ratio + 2)
    &:nth-child(1n+1)
      background-color lighten(c, color_ratio + 1)
      &:hover
        background-color lighten(c, color_ratio)
    &:nth-child(1n+2)
      background-color lighten(c, color_ratio + 2)
      &:hover
        background-color lighten(c, color_ratio)
    &:nth-child(1n+3)
      background-color lighten(c, color_ratio + 3)
      &:hover
        background-color lighten(c, color_ratio)
    &:last-of-type
      background-color lighten(c, color_ratio)
    &:hover
      background-color lighten(c, color_ratio)

tile_bg(c)
  background-color c
  &:hover
    background-color darken(c, color_ratio)
    .t_btn
      background-color c
  tile_buttons(c)

scroll(c)
  scrollbar-face-color c
  scrollbar-shadow-color c
  scrollbar-highlight-color c
  scrollbar-3dlight-color c
  scrollbar-darkshadow-color c
  scrollbar-track-color c
  scrollbar-arrow-color c
  &::-webkit-scrollbar
    width 12px
  &::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 3px c
  &::-webkit-scrollbar-thumb
    background c
    border 1px solid c
    -webkit-box-shadow: inset 0 0 3px c

.t_turquoise
  tile_bg(turquoise_color)
  .t_body
    scroll(turquoise_color)

.t_sun_flower
  tile_bg(sun_flower_color)
  .t_body
    scroll(sun_flower_color)

.t_orange
