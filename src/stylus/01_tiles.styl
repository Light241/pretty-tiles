@import 'nib'

tile_min_height = 315px
tile_wide = 265px
t_label_height = 72px
t_cap_height = 37px
t_button_height = 45px
t_body_v_padding = 30px
t_bottom_space = 45px

tile_transition(n)
  transition background-color n ease

.tile
  margin 4px 2px
  border-radius 5px
  display inline-block
  overflow hidden
  width tile_wide
  position relative
  vertical-align top
  min-height tile_min_height
  tile_transition(0.6s)
  .t_cap
    text-align center
    padding 5px
    font-size 24px
    & + .t_label
      & + .t_body
        height (tile_min_height - (t_cap_height + t_label_height + t_body_v_padding))
    & + .t_body
      height (tile_min_height - (t_cap_height + t_body_v_padding ))
  .t_label
    font-size 36px
    padding 15px
    text-align center
    & + .t_body
      height (tile_min_height - (t_label_height + t_body_v_padding ))
  .t_body
    overflow-y auto
    padding 15px
    height (tile_min_height - t_body_v_padding)
    margin-bottom 15px
    .description
      transition color 0.6s ease
    .t_value
      text-align center
      font-size 18px
      padding 5px 0
    .t_sub_value
      text-align center
      font-size 12px
  .t_controls
    padding 0
    .t_btn
      width 100%
      outline none
      border 0
      min-height 45px
      tile_transition(0.6s)
  .t_btn
    tile_transition(0.6s)
    &:hover, &:active, &:focus, &:active:focus
      cursor pointer
      outline none
  &.t_promo
    font-size: 5em;
    word-wrap: break-word;
  &.t_condensed
    width (tile_wide - 35px)
  &.t_wide
    width (tile_wide * 2) + 6px
  &.t_split
    .t_body
      padding 0
      .t_group
        border-top 1px solid white_color
        padding 15px
    .t_controls
      border-top 1px solid white_color
  &.t_stretch_v
    height initial
    .t_cap
      & + .t_label
        & + .t_body
          height initial
      & + .t_body
        height initial
      .t_label
        & + .t_body
          height initial
    .t_body
      height initial
      overflow-y initial
  &.t_stretch_h
    width initial
